    #modalContact.modal.fade tabindex="-1" role="dialog"
      .modal-dialog role="document"
        .modal-content
          .modal-header
            h4.modal-title Свяжитесь с нами
            .modal-subtitle Свяжитесь с нашей службой поддержки клиентов, если у Вас есть какие-либо вопросы.
          .modal-body
            form.contact-form data-toggle="validator" data-disable='false'
              .form-group
                label.sr-only for="contactNameInput" Ваше имя
                input#contactNameInput.form-control type="text" placeholder="Ваше имя" data-error="Введите свое имя" required='required'
                .help-block.with-errors

              .form-group
                label.sr-only for="contactEmailInput" E-mail
                input#contactEmailInput.form-control type="email" placeholder="E-mail" data-error="Введите email" required='required'
                .help-block.with-errors

              .form-group
                label.sr-only for="contactTextarea" Ваше сообщение
                textarea#contactTextarea.form-control rows="3" placeholder="Ваше сообщение"

              .form-group
                .checkbox
                  label
                    input type="checkbox" required='required' 
                    | Даю своё согласие на обработку персональных данных в соответствии с 
                    a href='#' пользовательским соглашением

              .form-group
                button type="submit" class="btn" Отправить сообщение
    
